{
	"name": "vscodemm",
	"displayName": "VSCode Memory Manager",
	"description": "Complementary extension for CE2103-VSCodeMM",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.22.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:Servers",
		"onCommand:Servers.startExtension",
		"onCommand:vscodemm.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "Servers",
					"name": "Servers"
				},
				{
					"id": "GarbageCollector",
					"name": "Garbage collector"
				}
			]
		},
		"commands": [
			{
				"command": "Servers.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "Servers.addServer",
				"title": "Add",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "Server.startExtension",
				"title": "Start"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "Servers.refreshEntry",
					"when": "view == Servers",
					"group": "navigation"
				},
				{
					"command": "Servers.addServer",
					"when": "view == Servers",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./ && ( [[ -d build ]] || mkdir build ) && cd build && cmake ../../ && make ce2103_vscodemm && cd .. && rm -rf vscodemm && mkdir vscodemm && cp build/src/libce2103_vscodemm.so vscodemm && cp -r ../include/ce2103 ../deps/common/include/ce2103 vscodemm",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.22.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/fs-extra": "^9.0.1",
		"fs-extra": "^9.0.1"
	}
}
